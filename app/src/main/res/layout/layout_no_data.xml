<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_no_data"
        android:layout_width="@dimen/size_no_data_iv"
        android:layout_height="@dimen/size_no_data_iv"
        android:layout_centerInParent="true"
        android:contentDescription="@string/description_no_data_image"
        android:src="@drawable/ic_no_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_no_data"
        android:layout_alignStart="@id/iv_no_data"
        android:layout_alignEnd="@id/iv_no_data"
        android:gravity="center"
        android:text="@string/txt_no_data_available"
        android:textSize="@dimen/txt_size_25sp" />
</RelativeLayout>
